<UserControl x:Class="Scanner.Controls.OperatorControlPanel" mc:Ignorable="d"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scanner.Controls">
    <Grid>
        <StackPanel>
            <ComboBox Name="tbxDocumentName" Height="20" IsEditable="True" IsTextSearchEnabled="True" Text="Паспорт">
                <ComboBoxItem Content="Паспорт"/>
                <ComboBoxItem Content="Паспорт2"/>
                <ComboBoxItem Content="Паспорт3"/>
                <ComboBoxItem Content="Паспорт4"/>
            </ComboBox>
            <ListBox>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <GroupBox Header="Название метаданных">
                            <StackPanel Orientation="Horizontal">
                                <TextBox Text="Метаданные"/>
                                <Button Content="-"/>
                            </StackPanel>
                        </GroupBox>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBoxItem>
                    <GroupBox Header="Название метаданных">
                        <TextBox Text="Метаданные"/>
                    </GroupBox>
                </ListBoxItem>
                <ListBoxItem>
                    <GroupBox Header="Название метаданных">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="Метаданные"/>
                            <Button Content="-"/>
                        </StackPanel>
                    </GroupBox>
                </ListBoxItem>
                <ListBoxItem>
                    <GroupBox Header="Название метаданных">
                        <TextBox Text="Метаданные"/>
                    </GroupBox>
                </ListBoxItem>
            </ListBox>
            <GroupBox Header="Дополнительные данные">
                <StackPanel Orientation="Horizontal" Margin="4">
                    <ComboBox Width="200" IsEditable="True" IsTextSearchEnabled="True" Text="Место рождения">
                    </ComboBox>
                    <Button Content="+" Margin="4"/>
                </StackPanel>
            </GroupBox>
            <StackPanel>
                <Button Content="Сохранить"/>
                <Button Content="Следующий документ"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
