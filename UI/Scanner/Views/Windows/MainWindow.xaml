<Window x:Class="Scanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="1">
            <TabItem Name="tbiScan" Header="Сканировщик" HorizontalContentAlignment="Stretch"/>
            <TabItem Name="tbiIndex" Header="Индексировщик" HorizontalContentAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="15*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <TreeView Name="trvFiles" Grid.Column="0" Grid.Row="1"></TreeView>
                    <StackPanel Grid.Row="1" Grid.Column="2">
                        <ComboBox Name="cmbDocumentType"/>
                        <TextBlock Name="tbDocumentName" Height="20"/>

                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Name="tbiAdmin" Header="Администратор" HorizontalContentAlignment="Stretch"/>
        </TabControl>
        <Menu x:Name="menu" Grid.Row="0">
            <MenuItem Header="Меню" VerticalAlignment="Center"/>
        </Menu>
    </Grid>
</Window>