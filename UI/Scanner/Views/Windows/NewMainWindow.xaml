<Window x:Class="Scanner.Views.Windows.NewMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scanner.Views.Windows"
        xmlns:controls="clr-namespace:Scanner.Controls"
        xmlns:convert="clr-namespace:Scanner.Infrastructure.Converters"
        mc:Ignorable="d"
        DataContext="{Binding NewMainWindowModel, Source={StaticResource Locator}}"
        Title="NewMainWindow" Height="450" Width="800">
    <Window.Resources>
        <convert:OperatorComboBoxFilterConverter x:Key="OperatorComboBoxFilterConverter"/>
        <convert:FilesListBoxConverter x:Key="FilesListBoxConverter"/>
    </Window.Resources>
    <TabControl>
        <TabItem Header="Оператор">
            <DockPanel>
                <DockPanel DockPanel.Dock="Left">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                        <TextBlock Text="Фильтр: "/>
                        <ComboBox Name="SelectFiltrinOP" Width="100" 
                                  ItemsSource="{Binding ScannerDataTemplates, 
                            Converter={StaticResource OperatorComboBoxFilterConverter}}"
                                  SelectedItem="{Binding SelectedFIlterInGroupboxOP, UpdateSourceTrigger=PropertyChanged}"
                                  IsTextSearchEnabled="True" IsEditable="True"/>
                    </StackPanel>
                    <ListBox ItemsSource="{Binding FileDatasInListOP}" 
                             SelectedItem="{Binding SelectedFileDataInOperatorPanel}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DocumentName}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
                <StackPanel DockPanel.Dock="Right" Orientation="Vertical">
                    <TextBlock Text="Шаблон: "/>
                    <ComboBox ItemsSource="{Binding ScannerDataTemplates, 
                            Converter={StaticResource OperatorComboBoxFilterConverter}}"
                                  SelectedItem="{Binding SelectedTemplateInOP}"
                                  IsTextSearchEnabled="True" IsEditable="True"
                              Text="{Binding SelectedFileDataInOperatorPanel.Document.DocumentType}"/>
                    <ListBox ItemsSource="{Binding DocumentMetadataInOP}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <GroupBox Header="{Binding Name}">
                                    <TextBox Text="{Binding Data}"/>
                                </GroupBox>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox Width="100" ItemsSource="{Binding TemplateMetadatas}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button Content="+"/>
                    </StackPanel>
                    <Button Content="Закончить обработку" Width="150" HorizontalAlignment="Center" Background="LightGreen"/>
                </StackPanel>
                <controls:OnlyPDFViewer/>
            </DockPanel>
        </TabItem>
        <TabItem Header="Администратор">
            <TabControl>
                <TabItem Header="Рецензирование">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Left">
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                                <TextBlock Text="Фильтр: "/>
                                <ComboBox Width="100" 
                                  ItemsSource="{Binding ScannerDataTemplates, 
                            Converter={StaticResource OperatorComboBoxFilterConverter}}"
                                  SelectedItem="{Binding SelectedFIlterInGroupboxOP, UpdateSourceTrigger=PropertyChanged}"
                                  IsTextSearchEnabled="True" IsEditable="True"/>
                            </StackPanel>
                            <ListBox ItemsSource="{Binding FileDatasInListOP}" 
                             SelectedItem="{Binding SelectedFileDataInOperatorPanel}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DocumentName}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DockPanel>
                        <StackPanel DockPanel.Dock="Right" Orientation="Vertical">
                            <TextBlock Text="Шаблон: "/>
                            <ComboBox ItemsSource="{Binding ScannerDataTemplates, 
                            Converter={StaticResource OperatorComboBoxFilterConverter}}"
                                  SelectedItem="{Binding SelectedTemplateInOP}"
                                  IsTextSearchEnabled="True" IsEditable="True"
                              Text="{Binding SelectedFileDataInOperatorPanel.Document.DocumentType}"/>
                            <ListBox ItemsSource="{Binding DocumentMetadataInOP}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <GroupBox Header="{Binding Name}">
                                            <TextBox Text="{Binding Data}"/>
                                        </GroupBox>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <Button Content="Закончить обработку" Width="150" HorizontalAlignment="Center" Background="LightGreen"/>
                        </StackPanel>
                        <controls:OnlyPDFViewer/>
                    </DockPanel>
                </TabItem>
                <TabItem Header="Шаблоны">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Left">
                            <GroupBox Header="Фильтр шаблонов:" DockPanel.Dock="Top" Margin="4,0">
                                <TextBox Width="200"/>
                            </GroupBox>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Center">
                                <Button Content="Удалить" Margin="4" Width="60"/>
                                <Button Content="Добавить" Margin="4" Width="60"/>
                            </StackPanel>
                            <ListBox Margin="4,0" BorderBrush="Gray" BorderThickness="1"/>
                        </DockPanel>
                        <StackPanel Orientation="Vertical">
                            <GroupBox Header="Шаблон:">
                                <TextBox/>
                            </GroupBox>
                            <ListBox MinHeight="100" Margin="4" BorderBrush="Gray" BorderThickness="1"></ListBox>
                            <GroupBox Header="Новые данные:" Margin="4" BorderThickness="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBox Width="150"/>
                                <Button Content="+" Margin="2,0"/>
                            </StackPanel>
                            </GroupBox>
                            <Button Content="Сохранить изменения" Width="140"/>
                        </StackPanel>
                    </DockPanel>
                </TabItem>
            </TabControl>
        </TabItem>
        
    </TabControl>
</Window>
